{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "30s",
      "disk_size": 4096,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "ec49c297d484b9da0787e5944edc38f7c70f21c0f6a60178d8e9a8926d1949f4",
      "iso_url": "http://ftp.iij.ad.jp/pub/linux/centos/6.8/isos/x86_64/CentOS-6.8-x86_64-minimal.iso",
      "iso_checksum_type": "sha256",
      "ssh_username": "cloudpack",
      "ssh_password": "cloudpack",
      "ssh_port": 22,
      "headless": true,
      "ssh_wait_timeout": "10m",
      "virtualbox_version_file": "/tmp/.vbox_version",
      "guest_additions_path": "/tmp/VBoxGuestAdditions.iso",
      "guest_additions_mode": "upload",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'cloudpack'|sudo -S sh '/tmp/shutdown.sh'",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'cloudpack'|sudo -S sh '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/repo-epel.sh",
            "scripts/base.sh",
            "scripts/dkms.sh",
	    "scripts/cloud-init.sh",
            "scripts/cleanup.sh"
          ]
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "override": {
        "virtualbox": {
          "output": "centos-6-x86_64-box.tar.gz"
        }
      }
    }
  ]
}
