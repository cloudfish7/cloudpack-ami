{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_source_ami": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "ap-northeast-1",
    "source_ami": "{{user `aws_source_ami`}}",
    "ssh_private_ip": false,
    "associate_public_ip_address": true,
    "instance_type": "t2.nano",
    "ssh_username": "cloudpack",
    "ami_name": "cloudpack-ami CentOS6 {{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "files/rpsxps",
      "destination": "/tmp/rpsxps"
    },
    {
      "type": "file",
      "source": "files/ec2-net-utils-0.4-1.24.el6cloudpack.noarch.rpm",
      "destination": "/tmp/ec2-net-utils-0.4-1.24.el6cloudpack.noarch.rpm"
    },
    {
      "type": "file",
      "source": "files/ec2-utils-0.4-1.24.el6cloudpack.noarch.rpm",
      "destination": "/tmp/ec2-utils-0.4-1.24.el6cloudpack.noarch.rpm"
    },
    {
      "type": "shell",
      "execute_command": "echo 'cloudpack'|sudo -S sh '{{.Path}}'",
      "scripts": [
        "scripts/repo-mongodb-org-3.0.sh",
	"scripts/repo-neo4j.sh",
	"scripts/repo-nginx.sh",
	"scripts/repo-postgresql.sh",
	"scripts/repo-mysql.sh",
	"scripts/repo-riak.sh",
	"scripts/cloudpack.sh",
        "scripts/cleanup.sh"
      ]
    }
  ]
}

