{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 8192,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "a7f8bbf4841d867562f9205b39f960f0cf97bfb1",
      "iso_checksum_type": "sha1",
      "iso_url": "http://ftp.iij.ad.jp/pub/linux/centos/5.11/isos/x86_64/CentOS-5.11-x86_64-bin-1of9.iso",
      "ssh_username": "cloudpack",
      "ssh_password": "cloudpack",
      "ssh_port": 22,
      "headless": false,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'cloudpack'|sudo -S sh '/tmp/shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'cloudpack'|sudo -S sh '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/cloudpack.sh",
	    "scripts/repo-mongodb-org-3.0.sh",
	    "scripts/repo-mysql.sh",
	    "scripts/repo-neo4j.sh",
	    "scripts/repo-nginx.sh",
	    "scripts/repo-postgresql.sh",
	    "scripts/repo-riak.sh",
            "scripts/cleanup.sh"
          ]
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "compress",
      "output": "centos-5-x86_64-box.tar.gz"
    }
  ]
}
